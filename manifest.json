{
  "manifest_version": 3,
  "name": "Website Time Cost",
  "version": "0.1.0",
  "description": "Minimal overlay showing time spent on site and open count."
  ,
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle overlay for this site"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
