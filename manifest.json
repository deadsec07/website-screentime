{
  "manifest_version": 3,
  "name": "Website Screen Time — Time Cost Overlay",
  "short_name": "Website Screen Time",
  "version": "0.1.0",
  "version_name": "0.1.0-beta",
  "description": "Track and visualize how much time you spend on each website. Minimal overlay with per-site analytics (today, last 7 days, month, year). 100% local, private.",
  "homepage_url": "https://hnetechnologies.com",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Website Screen Time — toggle overlay"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
